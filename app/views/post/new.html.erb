<h1>Add Diary</h1>
<div class="error">
    <% @post.errors.full_messages.each do |message| %>
        <p><%= message %></p>
    <% end %>
</div>
<%= form_tag "/post/create" do %>
<p>Title</p>
<input name="title" value="<%= @post.title %>">
<p>Content</p>
<textarea class="post_content" name="content"><%= @post.content %></textarea>
<p></p>
<input type="submit" value="Save">
<% end %>
