<!DOCTYPE html>
<html>
<head>
  <title>Workspace</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<header>
<div class="contents">
<ul>
  <% if @current_user %>
    <li><%= link_to "About", "/top" %></li>
    <li><%= link_to "Quiz", "/quiz/home" %></li>
    <li><%= link_to "Add word", "/note/new" %></li>
    <li><%= link_to "Words", "/note/index" %></li>
    <li><%= link_to "Add Diary", "/post/new" %></li>
    <li><%= link_to "Diaries", "/post/index" %></li>
    <li><%= link_to "All users", "/user/index" %></li>
    <li><%= link_to "Log out", "/logout", {method: :post} %></li>
    <li>logged in as (<%= @current_user.name %>)</li>
  <% else %>
    <li><%= link_to "Sign up", "/" %></li>
    <li><%= link_to "Sign in", "/signin" %></li>
    <li><%= link_to "About", "/top" %></li>
  <% end %>
</ul>
</div>
</header>
<% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
  </div>
<% end %>
<body>
<%= yield %>
</body>
</html>
